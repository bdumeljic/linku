<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bdlabs_linku.linku.EventsFragment">

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="0dp"
        android:divider="@null"
        android:drawSelectorOnTop="true"/>

    <TextView
        android:id="@+id/empty_events"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/empty_events_list"
        android:gravity="center"
        android:visibility="invisible"
        android:textSize="22dp"/>

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_event_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_icon="@drawable/ic_plus"
        fab:fab_colorNormal="@color/accent"
        fab:fab_colorPressed="@color/accent_darker"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_gravity="right|bottom" />

</FrameLayout>
