<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/event_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/vertical_72dp"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    android:paddingLeft="@dimen/keyline_1"
    android:paddingRight="@dimen/keyline_1">

    <ImageView
        android:id="@+id/event_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_other"
        android:padding="4dp"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/keyline_2_minus_16dp"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/event_name"
            android:text="@string/placeholder_events_item_name"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/body_text_1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/event_secondary"
            android:textColor="@color/body_grey"
            android:text="@string/placeholder_secondary"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>
</RelativeLayout>