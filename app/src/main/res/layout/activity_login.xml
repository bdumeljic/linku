<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/primary"
    tools:context=".LoginActivity"
    android:weightSum="5.0"
    android:orientation="vertical"
    tools:ignore="MergeRootFrame">


    <LinearLayout
        android:id="@+id/imageViewContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2.0"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:contentDescription="LinkU Logo"
            android:src="@drawable/linku_logo_white"
            android:baselineAlignBottom="false"
            android:layout_gravity="bottom" />

    </LinearLayout>


    <LinearLayout
        style="@style/LoginFormContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3.0"
        android:weightSum="11">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:clickable="true"
            android:gravity="bottom">

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_username"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textColorHint="@color/hint"
                android:textSize="@dimen/hint" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:imeActionId="@+id/edittext_action_login"
                android:imeActionLabel="@string/login"
                android:textColor="@android:color/white"
                android:textColorHint="@color/hint"
                android:textSize="@dimen/hint"
                android:layout_marginTop="@dimen/login_form_margin" />

            <Button
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                style="?android:attr/borderlessButtonStyle"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
                android:textColor="@android:color/white"
                android:layout_gravity="right"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textColor="@color/white85"
                android:text="@string/no_account" />

            <Button
                android:id="@+id/signup_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signup"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@android:color/white"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Button" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>