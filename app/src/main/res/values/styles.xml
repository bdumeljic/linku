<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent_2</item>
        <item name="colorControlNormal">@color/hint_light</item>
        <item name="colorControlHighlight">@color/accent_2</item>

        <!-- Add logo to action bar -->
        <item name="android:logo">@drawable/ic_hedge</item>
        <item name="android:displayOptions">useLogo|showHome</item>
    </style>

    <style name="AppTheme.Dark" parent="AppTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlNormal">@color/hint_dark</item>
        <item name="colorControlHighlight">@color/accent</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent_2</item>

        <item name="colorControlNormal">@color/hint_light</item>
        <item name="colorControlHighlight">@color/hint_light</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="homeAsUpIndicator">@drawable/ic_up</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_up</item>

        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
    </style>

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlNormal">@color/accent_2</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="ActionBarDark" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/white85</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorControlNormal">@color/white85</item>
        <item name="colorControlHighlight">#3fff</item>
        <item name="colorControlActivated">#3fff</item>
    </style>

    <style name="EditTextAccent1" parent="AppTheme.Dark">
        <item name="colorControlNormal">@color/hint_dark</item>
        <item name="colorControlActivated">@color/accent</item>
    </style>

    <style name="EditTextAccent2" parent="AppTheme">
        <item name="colorControlNormal">@color/hint_light</item>
        <item name="colorControlActivated">@color/accent_2</item>
    </style>

    <style name="events_item_text_big">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="events_item_text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="event_text_big">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="event_text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="new_event_text">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">56dp</item>
        <item name="android:paddingRight">56dp</item>
    </style>

    <style name="EditText.Dark" parent="Base.Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/hint_light</item>
        <item name="android:textSize">@dimen/hint</item>
        <item name="android:background">#00000000</item>
        <item name="android:paddingTop">@dimen/keyline_1_minus_8dp</item>
        <item name="android:paddingBottom">@dimen/keyline_1_minus_8dp</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="FlatButton" parent="Base.Widget.AppCompat.ActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:padding">@dimen/keyline_1_minus_8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textAppearance">@style/FlatButton.TextAppearance</item>
    </style>

    <style name="FlatButton.TextAppearance" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="about_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingBottom">@dimen/keyline_1</item>
        <item name="android:paddingTop">@dimen/keyline_1</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
</resources>
